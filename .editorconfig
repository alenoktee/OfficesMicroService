# ====================================================================================
# Комплексный .editorconfig для вашего проекта
# ====================================================================================

# Указываем, что это корневой файл, чтобы не искать другие .editorconfig выше по дереву
root = true

# ====================================================================================
# Общие настройки для всех типов файлов
# ====================================================================================
[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_operator_placement_when_wrapping = beginning_of_line
tab_width = 4
end_of_line = crlf
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion


# ====================================================================================
# Настройки для C# файлов (*.cs)
# ====================================================================================
[*.cs]

# --- Базовые правила ---

# Автоматическая сортировка и группировка using'ов
csharp_sort_usings = true
dotnet_separate_import_directive_groups = true

# Использовать пространства имен на уровне файла (File-Scoped Namespaces)
csharp_style_namespace_declarations = file_scoped:suggestion


# --- Ваш выбор правил для автоматического улучшения кода ---

# (2) Короткий синтаксис для однострочных методов/свойств
csharp_style_expression_body_for_methods = true:suggestion
csharp_style_expression_body_for_properties = true:suggestion
csharp_style_expression_body_for_accessors = true:suggestion

# (4) Тернарный оператор вместо if-else
csharp_style_prefer_conditional_expression_over_if = true:suggestion

# (7) Использовать int, string вместо Int32, String
csharp_style_predefined_type_for_member_access = true:suggestion
csharp_style_predefined_type_for_locals_parameters_members = true:suggestion

# (8) Всегда ставить фигурные скобки {}
csharp_prefer_braces = true:warning

# (9) Использовать is null вместо == null
csharp_style_null_check_over_equals = true:suggestion

# (11) Требовать readonly для неизменяемых полей
dotnet_style_readonly_field = true:suggestion

# (12) Требовать явное указание доступа (public, private)
dotnet_style_require_accessibility_modifiers = always:suggestion

# (13) Стандартный порядок модификаторов
csharp_preferred_modifier_order = public,private,protected,internal,static,extern,new,virtual,abstract,sealed,override,readonly,unsafe,volatile,async:suggestion

# (14) Удалять лишние скобки
dotnet_style_parentheses_in_expressions = never:suggestion

# (16) Находить неиспользуемые параметры
dotnet_code_quality_unused_parameters = all:suggestion

# (17) Находить неиспользуемые приватные члены
dotnet_code_quality_remove_unused_private_members = true:suggestion

# (25) Предлагать использовать ?? и ??=
csharp_style_coalesce_expression = true:suggestion
csharp_style_null_coalescing_assignment = true:suggestion

# (26) Предупреждать о пустых блоках catch (это правило включено по умолчанию в анализаторах .NET)
# Дополнительных настроек не требует.

# (29) Использовать String.Empty вместо ""
dotnet_style_prefer_string_empty_over_empty_string_literal = true:suggestion


# --- Правила именования (18, 19, 20, 21) ---

# (20) PascalCase для имен классов, интерфейсов, enum'ов, методов, свойств
dotnet_naming_rule.types_and_methods_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.types_and_methods_should_be_pascal_case.symbols = named_type, method, property, event, public_field
dotnet_naming_rule.types_and_methods_should_be_pascal_case.style = pascal_case

# (18) Интерфейсы должны начинаться с 'I'
dotnet_naming_rule.interface_should_be_pascal_case_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_pascal_case_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_pascal_case_with_i.style = pascal_case_with_i_prefix

# (21) camelCase для параметров методов
dotnet_naming_rule.parameters_should_be_camel_case.severity = suggestion
dotnet_naming_rule.parameters_should_be_camel_case.symbols = parameter
dotnet_naming_rule.parameters_should_be_camel_case.style = camel_case

# (19) Приватные поля должны начинаться с '_' и использовать camelCase (_myField)
dotnet_naming_rule.private_fields_should_be_camel_case_with_underscore.severity = suggestion
dotnet_naming_rule.private_fields_should_be_camel_case_with_underscore.symbols = private_field
dotnet_naming_rule.private_fields_should_be_camel_case_with_underscore.style = camel_case_with_underscore

# Стили именования (вспомогательные определения для правил выше)
dotnet_naming_style.pascal_case.capitalization = pascal_case
dotnet_naming_style.pascal_case_with_i_prefix.capitalization = pascal_case
dotnet_naming_style.pascal_case_with_i_prefix.required_prefix = I
dotnet_naming_style.camel_case.capitalization = camel_case
dotnet_naming_style.camel_case_with_underscore.capitalization = camel_case
dotnet_naming_style.camel_case_with_underscore.required_prefix = _
csharp_using_directive_placement = outside_namespace:silent
csharp_prefer_simple_using_statement = true:suggestion
csharp_style_prefer_method_group_conversion = true:silent
csharp_style_prefer_top_level_statements = true:silent
csharp_style_prefer_primary_constructors = true:suggestion
csharp_prefer_system_threading_lock = true:suggestion
csharp_style_expression_bodied_methods = false:silent
csharp_style_expression_bodied_constructors = false:silent
csharp_style_expression_bodied_operators = false:silent
csharp_style_expression_bodied_properties = true:silent
csharp_style_expression_bodied_indexers = true:silent
csharp_style_expression_bodied_accessors = true:silent
csharp_style_expression_bodied_lambdas = true:silent
csharp_style_expression_bodied_local_functions = false:silent
csharp_indent_labels = one_less_than_current
